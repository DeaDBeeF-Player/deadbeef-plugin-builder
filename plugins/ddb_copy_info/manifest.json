{
    source: {
        type: "git",
        url: "https://github.com/danpla/ddb_copy_info.git",
        revision: "v1.0.0",
        patches: [
            "make.diff"
        ],
    },
    make: {
        type: "make",
        root: "/",
        ENV: {
            GTK2_CFLAGS: "$GTK216_CFLAGS",
            GTK2_LIBS: "$GTK216_LIBS",
            GTK3_CFLAGS: "$GTK310_CFLAGS",
            GTK3_LIBS: "$GTK310_LIBS",
        },
        out: [
            'ddb_copy_info_gtk2.so',
            'ddb_copy_info_gtk3.so',
        ]
    }
}
